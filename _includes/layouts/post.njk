---
layout: base
---

<div class="page page-post">
	<div class="date">
		<i class="fi-calendar"></i>
		<span>{{ date.getDay() }}</span>
		<span>{{ date.toLocaleString("gl", {month: "long"}) }}</span>
		<span>{{ date.getFullYear() }}</span>
	</div>
	<hr />
	<h1>{{ title }}</h1>

	<p>
		<i class="fi-marker"></i>
		{{ location }}
	</p>

	{% if source_url %}
	<p>
		<i class="fi-torso"></i>
		Organiza
		<a href="{{ source_url }}" title="{{ source_name }}" _blank="true">
			{{ source_name }}
		<a/>
	</p>
	{% endif %}

	<br />

	{% if image %}
		<a href="/assets/images/{{ image }}" title="{{ title }}" _blank="true">
			<img class="image" src="/assets/images/{{ image }}" />
		</a>
	{% endif %}

	{{ content | safe }}
</p>
