			<a/>
		</li>
		{% endif %}
	</ul>

	<br />

	{% if image %}
		<a href="/recursos/imaxes{{ image }}" title="{{ title }}" _blank="true">
			<img class="image" src="/recursos/imaxes/{{ image }}" />
		</a>
	{% endif %}

	{{ content | safe }}
