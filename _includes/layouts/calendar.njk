<div class="page page-index">
	<header class="page-header">
		<h1>Calendario</h1>
	</header>
	<aside>
		<div>
			<nav>
				{% for post in collections[year.name] %}
				  <p>{{ post.data.title }}</p>
				{#
					<article class="post">
						<header>
							<hr />
							<a class="link {% if page.url == post.url %}active{% endif %}" href="{{ post.url }}">
								<h2>{{ post.data.title }}</h2>
							</a>
							<ul class="details">
								<li>
									<div class="date">
										<i class="fi-calendar is-light-blue"></i>
										{{ post.data.date.toLocaleDateString("gl", {weekday: "long", year: "numeric", month: "long", day: "numeric"}) }}
									</div>
								</li>
								<li>
									<i class="fi-marker is-light-blue"></i>
									{{ post.data.location }}
								</li>
								{% if post.data.source_url %}
								<li>
									<i class="fi-social-facebook is-light-blue"></i>
									<a class="link" href="{{ post.data.source_url }}" title="{{ post.data.source_name }}" _blank="true">
										{{ post.data.source_name }}
									</a>
								</li>
								{% endif %}
							</ul>
						</header>
					</article>
					#}
				{% endfor %}

				{% if pagination.pages.length > 1 %}
					<ul class="pagination">
						<li>MÃ¡is:</li>
