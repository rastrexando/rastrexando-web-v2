---
title: Rastrexando
---

<!doctype html>
<html lang="gl">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="/assets/bundle.css">
    <title>{{ title }}</title>
  </head>
  <body>
		<section class="layout-base">
			<aside>
				<a href="/"><img class="image" src="/assets/rastrexando-horizontal.png" /></a>
				<nav class="main-nav">
					{% for post in collections.post %}
						<article class="nav-post">
							<div class="date">
								{{ post.date.toLocaleDateString() }}
							</div>
							<a class="{% if page.url == post.url %}active{% endif %}" href="{{ post.url }}">{{ post.data.title }}</a>
						</article>
					{% endfor %}
				</nav>
			</aside>
			<main>
				{{ content | safe }}
			</main>
		</section>
  </body>
</html>
