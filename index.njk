---
layout: base
title: Inicio - Rastrexando
eleventyImport:
  collections: ["post"]
pagination:
  data: collections.post
  size: 30
  alias: posts
---

<div class="page page-index">
	<header>
		<i class="fi-calendar"></i>
		<h1>Calendario</h1>
	</header>
	<aside>
		<div>
			<nav>
				{% for post in pagination.items | reverse %}
					<article class="post">
						<header>
							<div class="date">
								<i class="fi-calendar"></i>
								<span>{{ post.date.getDay() }}</span>
								<span>{{ post.date.toLocaleString("gl", {month: "long"}) }}</span>
								<span>{{ post.date.getFullYear() }}</span>
							</div>
							<hr />
							<a class="{% if page.url == post.url %}active{% endif %}" href="{{ post.url }}">
								<h2>{{ post.data.title }}</h2>
							</a>
							<p class="location">
								<i class="fi-marker"></i>
								{{ post.data.location }}
							</p>
						</header>
					</article>
				{% endfor %}

				{% if pagination.pages.length > 1 %}
					<ul class="pagination">
						<li>MÃ¡is:</li>
						{%- for pageEntry in pagination.pages %}
							{% if page.url == pagination.hrefs[ loop.index0 ] %}
								<li>{{ loop.index }}</li>
							{% else %}
								<li><a href="{{ pagination.hrefs[ loop.index0 ] }}"{% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page"{% endif %}>{{ loop.index }}</a></li>
							{% endif %}
						{%- endfor %}
					</ul>
				{% endif %}
			</nav>
		</div>
	</aside>
</div>
