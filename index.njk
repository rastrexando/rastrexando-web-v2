---
layout: base
title: Inicio - Rastrexando
eleventyImport:
  data ["years"]
pagination:
  data: collections.upcomingPosts
  size: 10
  reverse: true
  alias: posts
---


<div class="page page-index">
  <header class="page-header">
    <h1><i class="fi-fast-forward is-light-blue"></i> Destacados</h1>
  </header>
  <aside>
    <div>
      <nav>
        {% for post in pagination.items %}
          {% renderPost post %}
        {% endfor %}

        {% if pagination.pages.length > 1 %}
          <ul class="pagination">
            <li>MÃ¡is:</li>
            {%- for pageEntry in pagination.pages %}
              {% if page.url == pagination.hrefs[loop.index0] %}
                <li>{{ loop.index }}</li>
              {% else %}
                <li>
                  <a href="{{ pagination.hrefs[ loop.index0 ] }}" {% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page" {% endif %}>{{ loop.index }}</a>
                </li>
              {% endif %}
            {%- endfor %}
          </ul>
        {% endif %}
      </nav>
    </div>
  </aside>

  <header class="page-header">
    <h1><i class="fi-calendar is-light-blue"></i> Calendarios</h1>
  </header>
  <aside>
    <div>
      <nav>
        <ul>
          {% for year in years %}
            <li><a href="calendarios/{{ year.name }}">{{ year.name }}</a></li>
          {% endfor %}
        </ul>
      </nav>
    </div>
  </aside>
</div>
