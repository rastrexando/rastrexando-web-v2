  </header>
  <section>
    <br />
    <table class="table">
      <thead>
        <tr>
          <th class="text-center">Ano</th>
          <th class="text-right">Eventos</th>
          <th class="text-right"></th>
        </tr>
      </thead>
      <tbody>
        {% for year in years %}
          <tr>
              <td class="text-right"><a title="Calendario {{ year.name }}" href="/calendarios/{{ year.name | slugify }}/">{{ year.name }}</a></td>
              <td class="text-right">{{ collections[year.name].length }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </section>
</div>
